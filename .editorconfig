# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
indent_style = space
end_of_line = lf
insert_final_newline = true

# JS-Files
[*.{mjs,js,ts}]
indent_size = 2

# JSON-Files
[*.json]
indent_size = 2

# MD-Files
[*.md]
indent_size = 4
